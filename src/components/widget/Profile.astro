---
import ImageWrapper from '../misc/ImageWrapper.astro'
import { Icon } from 'astro-icon/components'
import { profileConfig } from '../../config'
import { url } from '../../utils/url-utils'

const config = profileConfig
---

<div class="card-base p-3">
    <a aria-label="Go to About Page" href={url('/about/')}
       class="group block relative mx-auto mt-1 lg:mx-0 lg:mt-0 mb-3
       max-w-[12rem] lg:max-w-none overflow-hidden rounded-xl active:scale-95">
        <div class="absolute transition pointer-events-none group-hover:bg-black/30 group-active:bg-black/50
        w-full h-full z-50 flex items-center justify-center">
            <Icon name="fa6-regular:address-card"
                  class="transition opacity-0 scale-90 group-hover:scale-100 group-hover:opacity-100 text-white text-5xl">
            </Icon>
        </div>
        <ImageWrapper src={config.avatar || ""} alt="Profile Image of the Author" class="mx-auto lg:w-full h-full lg:mt-0 "></ImageWrapper>
    </a>
    <div class="px-2">
        <div class="font-bold text-xl text-center mb-1 dark:text-neutral-50 transition">{config.name}</div>
        <div class="h-1 w-5 bg-[var(--primary)] mx-auto rounded-full mb-2 transition"></div>
        <div class="text-center text-neutral-400 mb-2.5 transition">{config.bio}</div>
        <div class="flex gap-2 justify-center mb-1">
            {config.links.length > 1 && config.links.map(item =>
                    <a rel="me" aria-label={item.name} href={item.url} target="_blank" class="btn-regular rounded-lg h-10 w-10 active:scale-90">
                        <Icon name={item.icon} class="text-[1.5rem]"></Icon>
                    </a>
            )}
            {config.links.length == 1 && <a rel="me" aria-label={config.links[0].name} href={config.links[0].url} target="_blank"
                                            class="btn-regular rounded-lg h-10 gap-2 px-3 font-bold active:scale-95">
                <Icon name={config.links[0].icon} class="text-[1.5rem]"></Icon>
                {config.links[0].name}
            </a>}
        </div>
    </div>
    <!--在社交栏增加第二栏rss等长方形按钮 -->
    <div class="flex flex-wrap gap-2 justify-center items-center mb-1">
        <!-- 邮件按钮 -->
        <a href="mailto:lapiscafe@foxmail.com" 
        class="rounded-lg px-3 py-2 btn-regular bg-secondary dark:bg-secondary-dark text-white font-bold gap-2 h-10 flex items-center active:scale-95"
        target="_blank" >
          <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M4 20q-.825 0-1.412-.587T2 18V6q0-.825.588-1.412T4 4h16q.825 0 1.413.588T22 6v12q0 .825-.587 1.413T20 20zM20 8l-7.475 4.675q-.125.075-.262.113t-.263.037t-.262-.037t-.263-.113L4 8v10h16zm-8 3l8-5H4zM4 8v.25v-1.475v.025V6v.8v-.012V8.25zv10z"></path>
          </svg>
          <span>Email</span>
        </a>
      
        <!-- RSS 按钮 -->
        <a href="/rss.xml" 
        class="rounded-lg px-3 py-2 btn-regular bg-secondary dark:bg-secondary-dark text-white font-bold gap-2 h-10 flex items-center active:scale-95"
        target="_blank" >
          <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M5 21q-.825 0-1.412-.587T3 19t.588-1.412T5 17t1.413.588T7 19t-.587 1.413T5 21m13.5 0q-.65 0-1.088-.475T16.9 19.4q-.275-2.425-1.312-4.537T12.9 11.1T9.138 8.413T4.6 7.1q-.65-.075-1.125-.512T3 5.5t.45-1.062t1.075-.363q3.075.275 5.763 1.563t4.737 3.337t3.338 4.738t1.562 5.762q.05.625-.363 1.075T18.5 21m-6 0q-.625 0-1.075-.437T10.85 19.5q-.225-1.225-.787-2.262T8.65 15.35t-1.888-1.412T4.5 13.15q-.625-.125-1.062-.575T3 11.5q0-.65.45-1.075t1.075-.325q1.825.25 3.413 1.063t2.837 2.062t2.063 2.838t1.062 3.412q.1.625-.325 1.075T12.5 21"></path>
          </svg>
          <span>RSS</span>
        </a>
      
        <!-- 书库按钮 -->
         <!-- 引入 Google Material Symbols 图标样式 -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=menu_book">
        <a href="https://lcn4f9tpsrhw.feishu.cn/wiki/T459wailWiq6sxk2R19cEbdenTb?token=LB3Ob7h95aiymVsPw9DcBdYBnHg&table=tblHHDMyDw9J3xsp&view=vewMrBR1LU" 
        target="_blank" 
        class="rounded-lg px-3 py-2 btn-regular bg-secondary dark:bg-secondary-dark text-white font-bold gap-2 h-10 flex items-center active:scale-95">
        
       <span class="material-symbols-outlined text-[20px]">menu_book</span>
       <span>书库</span>
     </a>
     
        <!-- 影音库按钮 -->
         <!-- 引入 Google Material Symbols 图标样式 -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
        <a href="https://lcn4f9tpsrhw.feishu.cn/base/S13tbUJVHaCuausgvVqcbnJJnhh?table=tblPgLvf0LFpD4lA&view=vewFt03Cl4" 
        target="_blank" 
        class="rounded-lg px-3 py-2 btn-regular bg-secondary dark:bg-secondary-dark text-white font-bold gap-2 h-10 flex items-center active:scale-95">
        
        <!-- 改为“movie”图标 -->
        <span class="material-symbols-outlined text-[20px]">movie</span>
        <span>影音库</span>
    </a>
</div>

